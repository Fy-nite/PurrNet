@page
@model Purrnet.Pages.Admin.AnalyticsModel
@{
    ViewData["Title"] = "Analytics";
    Layout = "_Layout";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <h1><i class="bi bi-graph-up"></i> Analytics</h1>
            <p class="text-muted">Overview of package repository activity</p>
        </div>
    </div>

    @if (Model.Statistics != null)
    {
        <!-- Summary Cards -->
        <div class="row mb-4">
            <div class="col-md-3">
                <div class="card border-0 shadow-sm">
                    <div class="card-body">
                        <div class="d-flex align-items-center">
                            <div class="flex-shrink-0 me-3">
                                <div class="bg-primary text-white rounded p-3">
                                    <i class="bi bi-box-seam fs-4"></i>
                                </div>
                            </div>
                            <div>
                                <h3 class="mb-0">@Model.Statistics.TotalPackages</h3>
                                <small class="text-muted">Total Packages</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card border-0 shadow-sm">
                    <div class="card-body">
                        <div class="d-flex align-items-center">
                            <div class="flex-shrink-0 me-3">
                                <div class="bg-success text-white rounded p-3">
                                    <i class="bi bi-check-circle fs-4"></i>
                                </div>
                            </div>
                            <div>
                                <h3 class="mb-0">@Model.Statistics.ActivePackages</h3>
                                <small class="text-muted">Active Packages</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card border-0 shadow-sm">
                    <div class="card-body">
                        <div class="d-flex align-items-center">
                            <div class="flex-shrink-0 me-3">
                                <div class="bg-info text-white rounded p-3">
                                    <i class="bi bi-download fs-4"></i>
                                </div>
                            </div>
                            <div>
                                <h3 class="mb-0">@Model.Statistics.TotalDownloads.ToString("N0")</h3>
                                <small class="text-muted">Total Downloads</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card border-0 shadow-sm">
                    <div class="card-body">
                        <div class="d-flex align-items-center">
                            <div class="flex-shrink-0 me-3">
                                <div class="bg-warning text-white rounded p-3">
                                    <i class="bi bi-eye fs-4"></i>
                                </div>
                            </div>
                            <div>
                                <h3 class="mb-0">@Model.Statistics.TotalViews.ToString("N0")</h3>
                                <small class="text-muted">Total Views</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <!-- Most Downloaded -->
            <div class="col-md-6 mb-4">
                <div class="card border-0 shadow-sm">
                    <div class="card-header bg-transparent">
                        <h5 class="mb-0"><i class="bi bi-fire text-danger"></i> Most Downloaded</h5>
                    </div>
                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th>#</th>
                                        <th>Package</th>
                                        <th>Version</th>
                                        <th class="text-end">Downloads</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{int rank = 1;}
                                    @foreach (var pkg in Model.Statistics.MostDownloaded)
                                    {
                                        <tr>
                                            <td><span class="badge bg-secondary">@rank</span></td>
                                            <td>
                                                <a href="/Packages/Details/@pkg.Name" class="text-decoration-none fw-semibold">@pkg.Name</a>
                                                @if (pkg.Authors.Any())
                                                {
                                                    <br><small class="text-muted">by @string.Join(", ", pkg.Authors)</small>
                                                }
                                            </td>
                                            <td><span class="badge bg-light text-dark">v@pkg.Version</span></td>
                                            <td class="text-end fw-bold">@pkg.Downloads.ToString("N0")</td>
                                        </tr>
                                        rank++;
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Recently Added -->
            <div class="col-md-6 mb-4">
                <div class="card border-0 shadow-sm">
                    <div class="card-header bg-transparent">
                        <h5 class="mb-0"><i class="bi bi-stars text-warning"></i> Recently Added</h5>
                    </div>
                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th>Package</th>
                                        <th>Version</th>
                                        <th>Added</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var pkg in Model.Statistics.RecentlyAdded)
                                    {
                                        <tr>
                                            <td>
                                                <a href="/Packages/Details/@pkg.Name" class="text-decoration-none fw-semibold">@pkg.Name</a>
                                                @if (pkg.Authors.Any())
                                                {
                                                    <br><small class="text-muted">by @string.Join(", ", pkg.Authors)</small>
                                                }
                                            </td>
                                            <td><span class="badge bg-light text-dark">v@pkg.Version</span></td>
                                            <td><small class="text-muted">@pkg.CreatedAt.ToString("MMM dd, yyyy")</small></td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Popular Authors -->
            @if (Model.Statistics.PopularAuthors.Any())
            {
                <div class="col-md-6 mb-4">
                    <div class="card border-0 shadow-sm">
                        <div class="card-header bg-transparent">
                            <h5 class="mb-0"><i class="bi bi-people text-primary"></i> Top Contributors</h5>
                        </div>
                        <div class="card-body">
                            <div class="d-flex flex-wrap gap-2">
                                @foreach (var author in Model.Statistics.PopularAuthors)
                                {
                                    <span class="badge bg-primary fs-6">@author</span>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }

            <!-- All Packages by Downloads -->
            <div class="col-12 mb-4">
                <div class="card border-0 shadow-sm">
                    <div class="card-header bg-transparent d-flex justify-content-between align-items-center">
                        <h5 class="mb-0"><i class="bi bi-list-ol"></i> All Packages by Downloads</h5>
                        <a href="/Admin/Packages" class="btn btn-sm btn-outline-primary">Manage</a>
                    </div>
                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th>Package</th>
                                        <th>Version</th>
                                        <th>Categories</th>
                                        <th class="text-end">Downloads</th>
                                        <th class="text-end">Views</th>
                                        <th>Last Updated</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var pkg in Model.AllPackages)
                                    {
                                        <tr>
                                            <td>
                                                <a href="/Packages/Details/@pkg.Name" class="text-decoration-none fw-semibold">@pkg.Name</a>
                                                @if (!string.IsNullOrEmpty(pkg.Description))
                                                {
                                                    <br><small class="text-muted">@(pkg.Description.Length > 60 ? pkg.Description[..60] + "â€¦" : pkg.Description)</small>
                                                }
                                            </td>
                                            <td><span class="badge bg-light text-dark">v@pkg.Version</span></td>
                                            <td>
                                                @foreach (var cat in pkg.Categories.Take(3))
                                                {
                                                    <span class="badge bg-secondary me-1">@cat</span>
                                                }
                                            </td>
                                            <td class="text-end">@pkg.Downloads.ToString("N0")</td>
                                            <td class="text-end">@pkg.ViewCount.ToString("N0")</td>
                                            <td><small class="text-muted">@pkg.LastUpdated.ToString("MMM dd, yyyy")</small></td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-warning">Could not load analytics data.</div>
    }
</div>
