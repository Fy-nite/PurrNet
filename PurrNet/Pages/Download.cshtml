@page
@model purrnet.Pages.DownloadModel
@{
    ViewData["Title"] = "Install";
    Layout = "_Layout";
    ViewData["Description"] = "Install Purr using the hosted installer scripts (recommended).";
    ViewData["Keywords"] = "Purr, install, installer, script, PowerShell, shell";
}
<script>
    document.addEventListener("DOMContentLoaded", function() {
        const basePath = (window.Purr && window.Purr.pathBase) ? window.Purr.pathBase : '';
        const origin = (window.location && window.location.origin) ? window.location.origin.replace(/\/$/, '') : '';

        // Hosted installer scripts (recommended install method) - use full origin so commands work from previews
        const psUrl = origin + basePath + '/install.ps1';
        const shUrl = origin + basePath + '/install.sh';

        // Fill code blocks for CLI install examples
        const psCmd = `Invoke-RestMethod -Uri ${psUrl} | Invoke-Expression`;
        const curlCmd = `curl -sL ${shUrl} | sh`;
        const wgetCmd = `wget -qO- ${shUrl} | sh`;

        document.querySelectorAll('[data-install="ps"]').forEach(el => el.textContent = psCmd);
        document.querySelectorAll('[data-install="curl"]').forEach(el => el.textContent = curlCmd);
        document.querySelectorAll('[data-install="wget"]').forEach(el => el.textContent = wgetCmd);

        // Wire copy buttons
        document.querySelectorAll('[data-copy-btn]').forEach(btn => {
            btn.addEventListener('click', function() {
                const target = this.getAttribute('data-copy-target');
                const el = document.querySelector(target);
                if (!el) return;
                navigator.clipboard.writeText(el.textContent).then(() => {
                    const prev = this.innerHTML;
                    this.innerHTML = '<i class="bi bi-check"></i> Copied';
                    setTimeout(() => this.innerHTML = prev, 1600);
                }).catch(() => {
                    alert('Could not copy to clipboard');
                });
            });
        });

    });
</script>
<div class="hero-section text-center py-5 mb-5 rounded-4 position-relative overflow-hidden">
    <div class="container">
        <h1 class="display-3 fw-bold mb-3">
            <span class="bg-white bg-opacity-10 rounded-4 px-4 py-2 d-inline-block shadow-sm">
                <i class="bi bi-terminal text-primary"></i> Install Purr
            </span>
        </h1>
        <p class="lead mb-4">The recommended installation method is via the hosted installer scripts below.</p>
    </div>
</div>

<div class="container mb-5">
    <div class="row g-4">
        <div class="col-lg-8">
            <div class="card border-0 shadow rounded-4 mb-4">
                <div class="card-body">
                    <h4 class="card-title mb-3"><i class="bi bi-shield-lock"></i> Quick Install (recommended)</h4>
                    <p>Run one of the commands below to download and run the official installer script hosted on this site. Review the script before running it; see the raw script link to inspect the contents.</p>

                    <div class="row g-3">
                        <div class="col-md-6">
                            <div class="card">
                                <div class="card-header d-flex justify-content-between align-items-center">
                                    <span><i class="bi bi-powershell me-1"></i> PowerShell (Windows)</span>
                                    <div>
                                        <button class="btn btn-sm btn-outline-secondary" data-copy-btn data-copy-target="#psCmd"><i class="bi bi-clipboard"></i> Copy</button>
                                    </div>
                                </div>
                                <div class="card-body p-2">
                                    <pre class="mb-0"><code id="psCmd" data-install="ps">Loading…</code></pre>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="card">
                                <div class="card-header d-flex justify-content-between align-items-center">
                                    <span><i class="bi bi-terminal me-1"></i> Shell (macOS / Linux)</span>
                                    <div>
                                        <button class="btn btn-sm btn-outline-secondary" data-copy-btn data-copy-target="#curlCmd"><i class="bi bi-clipboard"></i> Copy curl</button>
                                        <button class="btn btn-sm btn-outline-secondary ms-1" data-copy-btn data-copy-target="#wgetCmd"><i class="bi bi-clipboard"></i> Copy wget</button>
                                    </div>
                                </div>
                                <div class="card-body p-2">
                                    <pre class="mb-1"><code id="curlCmd" data-install="curl">Loading…</code></pre>
                                    <pre class="mb-0"><code id="wgetCmd" data-install="wget">Loading…</code></pre>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="mt-3">
                        <strong>Security note:</strong> Piping remote scripts into a shell runs code from the network. If you prefer prebuilt binaries, see the <a asp-page="/About" class="text-primary">About</a> page for release information.
                    </div>
                </div>
            </div>

            <div class="card border-0 shadow rounded-4 mb-4">
                <div class="card-body">
                    <h5 class="card-title mb-2"><i class="bi bi-info-circle"></i> Advanced / Manual</h5>
                    <p>For advanced users who need platform-specific installers or offline packages, we publish artifacts in the releases. You can also use package managers that support binary distribution. See the <a asp-page="/Documentation/HowToInstall" class="text-primary">installation documentation</a> for more options.</p>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card sticky-top border-0 shadow rounded-4 mb-4">
                <div class="card-body">
                    <h5 class="card-title"><i class="bi bi-gear"></i> Install Helpers</h5>
                    <p class="mb-2">Need guidance?</p>
                    <ul class="list-unstyled mb-0">
                        <li><a asp-page="/Documentation/HowToInstall" class="text-decoration-none">Installation docs</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>