<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="PurrLauncher.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pages="clr-namespace:PurrLauncher.Pages"
    Title="PurrLauncher"
    Shell.NavBarHasShadow="True">

    <TabBar>

        <!-- Browse tab (all platforms) -->
        <ShellContent
            Title="Browse"
            Icon="browse.png"
            ContentTemplate="{DataTemplate pages:BrowsePage}"
            Route="browse" />

        <!-- Installed tab (WinUI only) -->
        <ShellContent
            Title="Installed"
            Icon="installed.png"
            ContentTemplate="{DataTemplate pages:InstalledPage}"
            Route="installed"
            IsVisible="{OnPlatform WinUI=True, Default=False}" />

    </TabBar>

</Shell>
